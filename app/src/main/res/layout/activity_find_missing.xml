<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FindMissingActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/primaryColor"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_20sdp"
                    android:gravity="end"
                    >


                    <Button
                        android:visibility="gone"
                        android:id="@+id/btnpincode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pincode"
                        android:backgroundTint="@color/primaryLightColor"
                        android:layout_marginRight="@dimen/_10sdp"

                        />

                    <Button
                        android:id="@+id/btnCities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cities"
                        android:backgroundTint="@color/primaryLightColor"
                        />

                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:layout_gravity="center"
                    >



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ed_bg"
                            android:text="Tamil"
                            android:textColor="@color/black"
                            android:enabled="false"
                            android:padding="@dimen/_10sdp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:orientation="vertical"

                        >




                        <LinearLayout
                            android:id="@+id/root_otp_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <EditText
                                android:id="@+id/otp_edit_box1"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:maxLength="1"
                                android:text="1"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box2"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:maxLength="1"
                                android:text="1"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box3"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:maxLength="1"
                                android:text="1"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:inputType="number"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box4"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:maxLength="1"
                                android:inputType="number"
                                android:text="1"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box5"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box6"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box7"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:textSize="@dimen/_20sdp"/>

                            <EditText
                                android:id="@+id/otp_edit_box8"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box9"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:textSize="@dimen/_20sdp" />

                            <EditText
                                android:id="@+id/otp_edit_box10"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_curve_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:enabled="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_20sdp" />


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llCityLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >


                        <EditText
                            android:id="@+id/edCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:background="@drawable/ed_bg"
                            android:hint="Enter City location"
                            android:padding="@dimen/_10sdp"

                            />

                        <Button
                            android:id="@+id/btnVerfifyCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_weight="1.4"
                            android:backgroundTint="@color/primaryLightColor"
                            android:text="Verify" />






                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llPincode"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:orientation="horizontal"
                        android:weightSum="2"

                        >

                        <EditText

                            android:layout_weight="0.6"
                            android:id="@+id/edPincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ed_bg"
                            android:hint="Enter Pin Code"
                            android:inputType="number"
                            android:maxLength="6"
                            android:padding="@dimen/_10sdp"
                           />

                        <Button
                            android:id="@+id/btnVerfifyPincode"
                            android:layout_weight="1.4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Verify"
                            android:backgroundTint="@color/primaryLightColor"
                            android:layout_marginLeft="@dimen/_10sdp"
                            />


                    </LinearLayout>
                    <Button
                        android:visibility="gone"
                        android:id="@+id/btnGenerate"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generate"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_20sdp"
                        android:layout_marginVertical="@dimen/_20sdp"
                        android:backgroundTint="@color/primaryLightColor"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


</RelativeLayout>